<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PROG7312_POE_PART1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PROG7312_POE_PART1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<style>
    .navbar-custom{
        background-color: #0e7597;
        height:80px;
        padding: 0 20px;
        display: flex;
        align-items: center;
    }/*(W3Schools, 2025)*/

    .navbar-nav .nav-item{
        margin-right:20px;
    }/*(W3Schools, 2025)*/

    .navbar-link{
        text-decoration:none;
        color: white;
    }/*(W3Schools, 2025)*/

    .navbar-link:hover{
        color: orange;
    }/*(W3Schools, 2025)*/

    .navbar-custom .navbar-nav .nav-link {
        color: white;
    }/*(W3Schools, 2025)*/

    .navbar-nav{
        display: flex;
        justify-content: flex-end;
        gap:20px;
        margin: 0;
        padding: 0;
        align-items: center;
    }/*(W3Schools, 2025)*/

    footer{
        background-color: #0e7597;
        color: black;
        padding: 10px 0;
        position: relative;
        text-align:center;
    }/*(W3Schools, 2025)*/

    .contact-btn{
        background-color: transparent;
        border-radius: 50px;
        border: 2px solid orange;
        padding: 8px 40px;
        transition: background-color 0.3s ease;
        display: flex;
        align-content: center;
        justify-content:center;
        gap: 8px;
        color: white;
        text-decoration:none;
    }/*(W3Schools, 2025)*/

    .contact-btn:hover {
        background-color: orange;
        color: orange;
        border: 2px solid orange;
        text-decoration: none;
        color: black;
    }/*(W3Schools, 2025)*/

    .icon{
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 15px;
    }/*(W3Schools, 2025)*/

    .social-icon a{
        font-size: 40px;
        color: white;
        transition: transform 0.3s ease;
        text-decoration: none;
    }/*(W3Schools, 2025)*/

    .social-icon a:hover {
        transform: scale(1.2);
    }/*(W3Schools, 2025)*/

</style>
<body>
    <header>
        <!--Top navigation bar-->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-custom">
            <div class="container-fluid">

                <!--Logo-->
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/Images/LogoNMB.png" alt="Logo" style="height:70px; width:auto;"/>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!--Navigation bar page links-->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="AboutUs"><b>About Us</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="BasicServices"><b>Services</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Report" asp-action="ReportIssues"><b>Report Issues</b></a>
                        </li>
                        @* <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Events"><b>Events and Announcements</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="RequestStatus"><b>Service Request Status</b></a>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link contact-btn text-light align-items-center justify-content-center" asp-area="" asp-controller="Home" asp-action="ContactUs"><i class="fa fa-phone"></i><b>Contact</b></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--Footer-->
    <footer>
        <div class="social-icon text-center mt-3">
            <a href="https://www.instagram.com/nelsonmandelabay/" target="blank"><i class="fa fa-instagram"></i></a>
            <a href="https://www.facebook.com/NMBayM/" target="blank"><i class="fa fa-facebook"></i></a>
        </div>
        <div class="container text-center text-light">
            &copy; 2025 - South African Local Municipality  
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
