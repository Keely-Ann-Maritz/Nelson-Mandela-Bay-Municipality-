@model IEnumerable<PROG7312_POE_PART1.Models.ReportIssue>

@{
    ViewData["Title"] = "ReportIssueView";
}

<!DOCTYPE html>
<html>
<head>
    <title>Report Issues</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/html/site.css">
</head>
<style>
    /* Styling the heading (W3Schools, 2025)*/
    h1{
        text-align:center;
        align-content: center;
    }

    /* Styling the button (W3Schools, 2025)*/
    .btn-view{
        background-color: orange;
        color: white;
        padding: 8px 16px;
        text-decoration: none;
        border-radius: 4px;
    }

    .btn-back{
        background-color: grey;
        color: white;
        padding: 8px 16px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        border: 2px solid grey;
        display:inline-block;
        outline: none !important;
        box-shadow: none !important;
    }

    .btn-back:hover{
        background-color: transparent;
        color: grey;
        border: 2px solid grey;
        text-decoration: none;
    }

    .btn-view:hover {
        background-color: transparent;
        color: orange;
        border: 2px solid orange;
        text-decoration: none;
    }

    /* Styling the table (W3Schools, 2025)*/
    .table th, .table td{
        padding: 12px 15px;
    }

    .table{
        width: 100%;
    }

    .table th{
        background-color: black;
        color: white;
    }

    .form-control:focus {
        border-color: orange;
        box-shadow: 0 0 0 0.25rem orange;
    }
    
    /* Styling the footer (W3Schools, 2025)*/
    footer {
        position: fixed;
    }
</style>
<body>

    <br />

    <div class="d-flex justify-content-between align-items-center mb-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-back"> Back </a>
    </div>

    <h1 style="text-align: center">Reported Issues</h1>

    <hr />

    <br />

    <!--success message informing the user they have successfully reported an issue (Dimitrov,2023)-->
    @if(TempData["Status"] != null)
    {
        @if(TempData["Message"] != null)
        {
            <div class="alert @(TempData["Status"]?.ToString() == "Success" ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
                <b>@(TempData["Status"]?.ToString() == "Success" ? "Success!": "Error!")</b>
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss ="alert" aria-label="Close"></button>
            </div> /*(W3Schools, 2025)*/
        }
    }

    <!--Table displaying the reported issues information (W3Schools,2025)-->
    <table class="table">
        <thead>
            <tr>
                <th>Report ID</th>
                <th>Location</th>
                <th>Category</th>
                <th>Description</th>
                <th>Attachment</th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach(var issue in Model)
                {
                    <tr>
                        <td>@issue.ReportId</td>
                        <td>@issue.Location</td>
                        <td>@issue.Category</td>
                        <td>@issue.Description</td>
                        <td>
                            @if(!string.IsNullOrWhiteSpace(issue.MediaAttachment))
                            {
                                <a href="@issue.MediaAttachment" target="_blank" class="btn-view">View</a>
                            }
                            else
                            {
                                <span>-</span>
                            }
                        </td><!--(W3Schools,2025)-->
                    </tr>
                }
            }
            else
            {
                <!--Error message informing the user there are no reports (Bootstrap, 2025)-->
                <tr>
                    <td colspan="5" class="text-center">No issues were reported yet.</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
