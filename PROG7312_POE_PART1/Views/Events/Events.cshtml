@section Scripts {
    <script>
        // Opening a modal based on ID (GeeksforGeeks, 2024)
        function openModalById(modalId) {
            const modal = document.getElementById(modalId);
            if (modal) {
                modal.classList.remove("hide");
            }
        }

        // Closing a modal based on ID (GeeksforGeeks, 2024)
        function closeModalById(modalId) {
            const modal = document.getElementById(modalId);
            if (modal) {
                modal.classList.add("hide");
            }
        }
        
        // Closing functionality of the modal (GeeksforGeeks, 2024)
        document.addEventListener("click", function(e) {
            if (e.target.classList.contains("modal-overlay") && !e.target.classList.contains("hide")) {
                // Getting the ID of the modal which as clicked (GeeksforGeeks, 2024)
                const modalId = e.target.id;
                closeModalById(modalId);
            }
        });
    </script>
